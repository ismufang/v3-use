{
  "name": "v3-use",
  "version": "1.0.24",
  "description": "High quality and reliable Vue3 Hooks library",
  "main": "dist/index.js",
  "license": "MIT",
  "author": "ismufang",
  "homepage": "https://github.com/ismufang/v3-use#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ismufang/v3-use"
  },
  "bugs": {
    "url": "https://github.com/ismufang/v3-use/issues"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "hook",
    "vue3-hooks",
    "vue-hook",
    "vue-use",
    "v3-use",
    "vue3-use"
  ],
  "scripts": {
    "watch": "rollup -c --watch",
    "build": "cross-env NODE_ENV=production rollup -c",
    "prettier": "prettier -c --write .",
    "docs:dev": "vitepress dev docs --port=8877",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs --port=1334",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "release:major": "standard-version -r major && git push --follow-tags origin main && npm run build && npm publish",
    "release:minor": "standard-version -r minor && git push --follow-tags origin main && npm run build && npm publish",
    "release:patch": "standard-version -r patch && git push --follow-tags origin main && npm run build && npm publish"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "lint-staged": "^11.2.4",
    "prettier": "^2.4.1",
    "rollup": "^2.62.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-dts": "^3.0.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-uglify": "^6.0.4",
    "rollup-plugin-vue": "^6.0.0",
    "standard-version": "^9.5.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "vitepress": "^0.21.6",
    "vitest": "^0.22.1",
    "vue": "3.2.26",
    "yorkie": "^2.0.0"
  }
}
